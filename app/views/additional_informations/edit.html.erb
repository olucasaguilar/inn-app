<h1>Editar Informações Adicionais</h1>

<%# fill_in 'Descrição', with: 'Pousada do Alemão é uma pousada muito boa'
fill_in 'Políticas', with: 'Não aceitamos som alto'
fill_in 'Horário de Check-in', with: '14:00'
fill_in 'Horário de Check-out', with: '12:00'
check 'Aceita Pets'
click_on 'Atualizar Informações Adicionais' %>

<%# create_table "additional_informations", force: :cascade do |t|
  t.text "description"
  t.text "policies"
  t.time "check_in"
  t.time "check_out"
  t.boolean "pets"
end %>

<%= form_with model: @additional_information do |ai| %>
  <div>
    <%= ai.label :description %>
    <%= ai.text_area :description %>
  </div>

  <div>
    <%= ai.label :policies %>
    <%= ai.text_area :policies %>
  </div>

  <div>
    <%= ai.label :check_in %>
    <%= ai.time_field :check_in %>
  </div>

  <div>
    <%= ai.label :check_out %>
    <%= ai.time_field :check_out %>
  </div>

  <div>
    <%= ai.label :pets %>
    <%= ai.check_box :pets %>
  </div>

  <div>
    <%= ai.submit %>
  </div>
<% end %>